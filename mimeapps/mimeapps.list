application/x-cbr=org.pwmt.zathura-cb.desktop;
application/x-cbz=org.pwmt.zathura-cb.desktop;
application/x-mobipocket-ebook=calibre-ebook-viewer.desktop;
image/vnd.djvu=org.gnome.Papers.desktop;

#-------------------------------------------------------------------------------
