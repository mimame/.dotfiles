# Ghostty Configuration File - Accessibility Optimized
# https://ghostty.org/docs/config/reference

# --- Accessibility & Visibility ---
# Fully opaque background for maximum focus
background-opacity = 1.0
background-blur = false
# WCAG AA standard contrast (4.5) ensures text is always readable
minimum-contrast = 4.5
# Prevents text edge darkening/artifacts on Linux
alpha-blending = linear-corrected

# --- Typography ---
font-family = "JetBrainsMonoNL Nerd Font Mono"
font-size = 18.0
# Makes bold text use high-intensity "bright" colors
bold-color = bright
# Disable all programming and standard ligatures
font-feature = -calt
font-feature = -liga
font-feature = -dlig
# Uses modern Unicode standards for character widths
grapheme-width-method = unicode

# --- Theme & Colors ---
theme = Dracula
# Ensure the cursor is a solid, easy-to-find block
cursor-style = block
cursor-style-blink = false

# --- Window & UI ---
# Add padding so text doesn't hug the screen edges
window-padding-x = 10
window-padding-y = 10
window-padding-balance = true
# Use wide tabs for easier clicking/viewing
gtk-wide-tabs = true

# --- Productivity & Interaction ---
# Allow moving the cursor via Alt+Click (requires shell integration)
cursor-click-to-move = true
mouse-hide-while-typing = true
# Consistent scrolling speed
mouse-scroll-multiplier = 3

# --- Selection & Clipboard ---
copy-on-select = clipboard
selection-clear-on-typing = true
# Security: Protect against "copy/paste" attacks
clipboard-paste-protection = true
# Clean up copied text automatically
clipboard-trim-trailing-spaces = true

# --- Shell & System ---
# Enables prompt marking, window titles, and SSH terminfo management
shell-integration-features = cursor,no-sudo,title,ssh-env,ssh-terminfo
# Resource isolation for better system stability
linux-cgroup = single-instance

# --- Notifications ---
app-notifications = no-clipboard-copy
